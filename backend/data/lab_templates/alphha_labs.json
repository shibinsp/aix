      "description": "Learn essential Linux commands and navigation in a lightweight environment",
      "category": "system_security",
      "difficulty": "beginner",
      "duration_minutes": 60,
      "preset": "minimal",
      "infrastructure_spec": {
        "type": "alphha-linux",
        "preset": "minimal",
        "containers": [
          {
            "name": "target",
            "image": "alphha-linux:minimal",
            "ports": ["2222:22"],
            "resources": {
              "memory": "256m",
              "cpu": 0.5
            }
          }
        ]
