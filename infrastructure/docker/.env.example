# AI CyberX Production Environment - TEMPLATE
# Copy to .env and fill in real values
# NEVER commit the actual .env file!

# Server Configuration
SERVER_IP=your-server-ip

# Security - Generate a secure random key (e.g., openssl rand -hex 32)
SECRET_KEY=

# AI API Keys - At least one required
MISTRAL_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# Database - Use strong passwords in production
POSTGRES_USER=cyberx
POSTGRES_PASSWORD=
POSTGRES_DB=cyberx
DATABASE_URL=postgresql+asyncpg://cyberx:YOUR_PASSWORD@postgres:5432/cyberx

# Redis
REDIS_URL=redis://redis:6379/0

# Debug mode off for production
DEBUG=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AUTH_PER_MINUTE=10

# Lab Settings
MAX_CONCURRENT_LABS=50
LAB_TIMEOUT_MINUTES=120

# Optional: External Services
UNSPLASH_ACCESS_KEY=
PEXELS_API_KEY=
YOUTUBE_API_KEY=
